<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_titlebar"
    android:layout_width="match_parent"
    android:layout_height="100pt"
    android:background="@color/layout_title_bar_bg"
    android:visibility="gone">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBaseline="@+id/button_backward"
        android:layout_alignBottom="@+id/button_backward"
        android:layout_alignParentStart="true"
        android:ellipsize="marquee"
        android:gravity="center_horizontal|center"
        android:singleLine="true"
        android:text="title bar"
        android:textColor="@color/layout_title_bar_text_bg"
        android:textSize="18pt" />

    <TextView
        android:id="@+id/button_backward"
        android:layout_width="120pt"
        android:layout_height="match_parent"
        android:clickable="true"
        android:drawableLeft="@mipmap/icon_title_back"
        android:drawablePadding="6pt"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="18pt"
        android:singleLine="true"
        android:textColor="@color/layout_title_bar_text_bg"
        android:textSize="16pt"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/button_forward"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:drawablePadding="6pt"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingRight="18pt"
        android:singleLine="true"
        android:text="submit"
        android:textColor="@color/layout_title_bar_text_bg"
        android:textSize="16pt"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/layout_title_bar_line"
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@color/main_gray_line" />

</RelativeLayout>