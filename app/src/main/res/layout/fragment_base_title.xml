<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_titlebar"
        android:layout_width="match_parent"
        android:layout_height="100pt"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout_title_bar_line"
            android:background="@color/video_call_1"
            android:gravity="center"
            android:text="Title"
            android:textColor="@color/payment_text_color9"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/layout_title_bar_line"
            android:layout_width="match_parent"
            android:layout_height="2pt"
            android:layout_alignParentBottom="true"
            android:background="@color/main_gray_line" />
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_bg" />
</LinearLayout>